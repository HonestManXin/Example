<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FileViewToolbarButtonStytle">
        <item name="android:textSize">16.0dip</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10.0dip</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="FileViewOperationButtonStytle">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ff666666</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/operation_button_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="FileViewOperationMoveButtonStytle">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">#ff666666</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/remote_button_bg</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
    </style>
    <style name="CategoryButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="CategoryButtonIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">3.0px</item>
    </style>
    <style name="CategoryButtonTextStyle">
        <item name="android:textSize">19.0px</item>
        <item name="android:textColor">#ff111111</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="CategoryButtonCountTextStyle">
        <item name="android:textSize">15.0px</item>
        <item name="android:textColor">#ffa6a6a6</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="InformationItemTitleStyle">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_width">60.0dip</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="InformationItemContentStyle">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5.0dip</item>
    </style>
    <style name="InformationItemStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5.0dip</item>
    </style>
    <style name="InformationTextStyle">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">#ff222222</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="InformationDialog" parent="@*android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/panel_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="CategoryLegendStyle">
        <item name="android:textSize">10.0dip</item>
        <item name="android:textColor">#ff222222</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">2.0dip</item>
        <item name="android:drawablePadding">5.0px</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="BottomButton">
        <item name="android:textAppearance">?android:textAppearanceSmallInverse</item>
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">#cc000000</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_bottom</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#80ffffff</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="BottomButton.Left" parent="@style/BottomButton" />
    <style name="BottomButton.Middle" parent="@style/BottomButton" />
    <style name="BottomButton.Right" parent="@style/BottomButton">
        <item name="android:background">@drawable/btn_bottom_last</item>
    </style>
    <style name="BottomButtonBar">
        <item name="android:textSize">17.0sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@drawable/bottom_button_bar</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Widget">
        <item name="android:textAppearance">@style/TextAppearance</item>
    </style>
    <style name="TextAppearance">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorHighlight">#ffff9200</item>
        <item name="android:textColorHint">@color/hint_foreground_dark</item>
        <item name="android:textColorLink">#ff5c5cff</item>
        <item name="android:cacheColorHint">@color/black</item>
    </style>
    <style name="TextAppearance.Preference" parent="@style/TextAppearance" />
    <style name="TextAppearance.Preference.PrimaryItem" parent="@style/TextAppearance.Preference">
        <item name="android:textSize">@dimen/preference_primary_text_size</item>
        <item name="android:textColor">@color/preference_primary_text</item>
    </style>
    <style name="TextAppearance.Preference.SecondaryItem" parent="@style/TextAppearance.Preference">
        <item name="android:textSize">@dimen/preference_secondary_text_size</item>
        <item name="android:textColor">@color/preference_secondary_text</item>
    </style>
    <style name="TextAppearance.ListView" parent="@style/TextAppearance" />
    <style name="TextAppearance.ListView.PrimaryItem" parent="@style/TextAppearance.ListView">
        <item name="android:textSize">@dimen/list_primary_text_size</item>
        <item name="android:textColor">@color/primary_text_dark</item>
    </style>
    <style name="TextAppearance.ListView.SecondaryItem" parent="@style/TextAppearance.ListView">
        <item name="android:textSize">@dimen/list_secondary_text_size</item>
        <item name="android:textColor">@color/secondary_text_dark</item>
    </style>
    <style name="TextAppearance.Widget" parent="@style/TextAppearance" />
    <style name="TextAppearance.Widget.TabWidget" parent="@style/TextAppearance.Widget">
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/tab_indicator_text</item>
    </style>
    <style name="Widget.TabWidget" parent="@style/Widget">
        <item name="android:textAppearance">@style/TextAppearance.Widget.TabWidget</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#e6000000</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="tabWidgetStyle" parent="@style/Widget.TabWidget" />
    <style name="TabWidget">
        <item name="android:divider">@color/tab_indicator_text</item>
        <item name="android:tabStripLeft">@drawable/tab_bottom_left</item>
        <item name="android:tabStripRight">@drawable/tab_bottom_right</item>
        <item name="android:tabStripEnabled">true</item>
    </style>
    <style name="Animation" />
    <style name="Animation.OptionsPanel" parent="@style/Animation">
        <item name="android:windowEnterAnimation">@anim/options_panel_enter</item>
        <item name="android:windowExitAnimation">@anim/options_panel_exit</item>
        <item name="android:background">@drawable/list_item_background</item>
        <item name="android:padding">5.0dip</item>
    </style>
    <style name="Theme.Light" parent="@*android:style/Theme.Light">
        <item name="android:colorForeground">@color/mi_bright_foreground_dark</item>
        <item name="android:colorBackground">@color/mi_background_dark</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:buttonStyle">@style/BottomButton</item>
        <item name="android:windowBackground">@color/mi_screen_background_light</item>
    </style>
    <style name="Theme.NoTitleBar" parent="@style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Theme.Panel" parent="@style/Theme.Light">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="Theme.SearchBar" parent="@style/Theme.Panel">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:divider">@null</item>
    </style>
    <style name="Theme.Dialog" parent="@style/Theme.Light">
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:windowBackground">@drawable/panel_background</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="android:textColorHint">@color/hint_foreground_dark</item>
        <item name="android:windowAnimationStyle">@style/Animation.Dialog</item>
    </style>
    <style name="DialogWindowTitle">
        <item name="android:textAppearance">@style/TextAppearance.WindowTitle</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
    <style name="TextAppearance.WindowTitle" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/titlebar_text_size</item>
        <item name="android:textColor">@color/primary_text_dark_disable_only</item>
    </style>
    <style name="Animation.Dialog" parent="@style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <style name="Widget.CompoundButton" parent="@style/Widget">
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:textColor">@color/primary_text_dark_disable_only</item>
        <item name="android:gravity">left|center</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="Widget.CompoundButton.CheckBox" parent="@style/Widget.CompoundButton">
        <item name="android:background">@drawable/btn_check_label_background</item>
        <item name="android:button">@drawable/btn_check</item>
    </style>
    <style name="Widget.CompoundButton.RadioButton" parent="@style/Widget.CompoundButton">
        <item name="android:background">@drawable/btn_radio_label_background</item>
        <item name="android:button">@drawable/btn_radio</item>
    </style>
    <style name="Theme.Dialog.Alert" parent="@style/Theme.Dialog" />
</resources>
