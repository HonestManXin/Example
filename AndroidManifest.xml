<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qihoo.example"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".QihooActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name=".QihooPicureActivity"
            android:label="@string/app_picture">
        </activity>
        
        <activity 
            android:name=".QihooContactActivity"
            android:label="@string/app_contact">
        </activity>
        
        <activity 
            android:name=".QihooShareActivity"
            android:label="@string/app_share">
        </activity>
        
    </application>
	<uses-permission android:name="android.permission.READ_CONTACTS" />
</manifest>